<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_extra_tiny"
    android:layout_marginLeft="@dimen/spacing_small"
    android:layout_marginRight="@dimen/spacing_extra_large">

    <TextView
        android:id="@+id/message_text"
        style="@style/chat_text_message_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:autoLink="web"
        android:background="@drawable/incoming_msg"
        android:paddingLeft="@dimen/spacing_normal"
        android:textColor="@color/primaryTextColor" />

    <ImageView
        android:id="@+id/shared_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/spacing_extra_small"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:visibility="gone" />

</RelativeLayout>